%p 
  #notice
  = notice

%h1 Tournament Bracket

- (1..@tournament.max_rounds).each do |round|
  %b="Round #{round}"
  %br
  - matches = Match.find(:all, :conditions => {:tournament_id => @tournament.id, :tournament_round => round})
  - if matches.size > 0
    - matches.each do |match|
      = "(#{match.id}) 1st = #{match.first_bot_from_match}"
      - if match.first_bot_id
        = " // #{match.first_bot_id}"
      %br
      = "(#{match.id}) 2nd = #{match.second_bot_from_match}"
      - if match.second_bot_id
        = " // #{match.second_bot_id}"
      %br
  - else
    Winner
     
%br

= link_to 'Edit', edit_tournament_path(@tournament) 
|
= link_to 'Back', tournaments_path 
